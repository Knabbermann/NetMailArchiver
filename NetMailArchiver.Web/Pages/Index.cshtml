@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model NetMailArchiver.Web.Pages.IndexModel
@{
}

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container p-3">
    <div class="row pt-4 align-items-center">
        <div class="col-6">
            <h2 class="text-primary">Overview</h2>
        </div>
    </div>
    <br />
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
            <tr class="table-primary">
                <th>
                    Host
                </th>
                <th>
                    Username
                </th>
                <th>
                    Archived Mails
                </th>
                <th>
                    Archived Attachments
                </th>
                <th class="fst-italic">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (obj, index) in Model.ImapInformations.Select((obj, index) => (obj, index)))
            {
                <tr>
                    <td width="20%">
                        @obj.Host
                    </td>
                    <td width="30%">
                        @obj.Username
                    </td>
                    <td width="15%">
                        @obj.EmailCount
                    </td>
                    <td width="15%">
                        @obj.AttachmentCount
                    </td>
                    <td width="30%">
                        <div class="d-flex justify-content-evenly">
                            <form asp-page="/Index" asp-route-id="@obj.Id" method="post">
                                <button type="submit" class="btn btn-outline-primary">
                                    <i class="bi bi-info-square"></i>&nbsp;Archive last 30 days
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>